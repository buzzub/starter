{
  "name": "readymade-starter",
  "version": "1.0.0",
  "description": "Starter code for a site built with Readymade",
  "repository": "git@github.com:readymade-ui/starter.git",
  "author": "Steve Belovarich <steveblue@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "NODE_ENV=development parcel src/client/index.html --port 4444",
    "prod": "NODE_ENV=production rimraf dist && npm run build:prod",
    "serve": "node dist/server",
    "build:prod": "concurrently \"npm run prod:client\" \"npm run prod:server\"",
    "prod:client": "parcel build src/client/index.html -d dist/client --public-url /dist/client --no-source-maps",
    "prod:server": "parcel build src/server/index.ts -d dist/server --public-url /dist --target=node --no-source-maps",
    "pretty:check": "prettier \"src/**/*.{js,ts,html,css,scss}\" --check",
    "pretty": "prettier \"src/**/*.{js,ts,html,css,scss}\" --write"
  },
  "dependencies": {
    "@readymade/core": "^1.0.0",
    "@ungap/custom-elements-builtin": "^0.2.10",
    "broadcastchannel-polyfill": "^1.0.0",
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^13.7.1",
    "autoprefixer": "^9.7.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "browserslist": [
    ">2%",
    "Edge > 14",
    "Firefox > 63",
    "Chrome > 67"
  ]
}
